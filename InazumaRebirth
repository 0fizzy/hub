--Lib/Tab
local Lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/Kinlei/MaterialLua/master/Module.lua"))()
local Tab = Lib.Load({
	Title = "Xero IR V3",
	Style = 3,
	SizeX = 500,
	SizeY = 350,
	Theme = "Dark",
	ColorOverrides = {
		MainFrame = Color3.fromRGB(103, 103, 103)
	}
})

--Sections

local GeneralSection = Tab.New({
	Title = "General"
})
local AutofarmSection = Tab.New({
	Title = "Autofarm"
})
local TeleportSection = Tab.New({
	Title = "Teleports"
})
local ConfigurationSection = Tab.New({
	Title = "Configuration"
})

-- GENERAL SECTION --

local HBE = GeneralSection.Toggle({
	Text = "HBE",
	Callback = function(Value)
		_G.Enabled = Value

		game:GetService('RunService').RenderStepped:connect(function()
			for _, v in next, game:GetService('Players'):GetPlayers() do
				if v.Name ~= game:GetService('Players').LocalPlayer.Name then
					pcall(function()
						if _G.Enabled then
							v.Character.Head.Transparency = _G.Transparency
							v.Character.Head.Color = _G.Color
							if not _G.TeamCheck or (_G.TeamCheck and v.Team ~= game:GetService("Players").LocalPlayer.Team) then
								v.Character.Head.Size = Vector3.new(_G.HeadSize, _G.HeadSize, _G.HeadSize)
								v.Character.Head.CanCollide = false
								v.Character.Head.Massless = true
							else
								v.Character.Head.Size = Vector3.new(2, 1, 1)
								v.Character.Head.Transparency = 0
							end
						else
							v.Character.Head.Size = Vector3.new(2, 1, 1)
							v.Character.Head.Transparency = 0
						end
					end)
				end
			end
		end)
	end,
	_G.Enabled == false
})

local FullHiss = GeneralSection.Button({
	Text = "Hiss Amount",
	Callback = function()
		local Player = game:GetService("Players").LocalPlayer
		Player.Data.TP.Value = 100
	end})

local HissCooldown = GeneralSection.Button({
	Text = "Remove Hiss CD",
	Callback = function()
		for _, v in pairs(game:GetService("Players").LocalPlayer.Character:GetDescendants()) do
			pcall(function()
				if v == workspace:GetService("Players").LocalPlayer.HissatsuCD then
					v:Destroy()
				end
			end)
		end
	end
})

-- CONFIGURATION SECTION --

local HBESize = ConfigurationSection.TextField({
	Text = "HBE Size",
	Callback = function(Size)
		_G.HeadSize = Size
	end
})

local HBETransparency = ConfigurationSection.TextField({
	Text = "HBE Transparency",
	Callback = function(Transparency)
		_G.Transparency = Transparency
	end
})

local HBEColour = ConfigurationSection.ColorPicker({
	Text = "HBE Colour",
	Default = Color3.fromRGB(255, 0, 0),
	Callback = function(Value)
		_G.Color = Color3.new(Value.R, Value.G, Value.B)
		print(_G.Color)
	end
})

local HBE = ConfigurationSection.Toggle({
	Text = "HBE Team Checker",
	Callback = function(Value)
		_G.TeamCheck = Value

	end,
	_G.TeamCheck == false
})

_G.TeamCheck = true
_G.Transparency = 0.944
_G.HeadSize = 6
_G.HissCD = false
_G.TeamCheck = false
